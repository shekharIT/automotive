<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android">

<!-- REQUIRED PERMISSIONS for Location and Hardware Access -->
<!-- Used for location data in the MockLocationProvider context -->
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

<!-- Permissions often required for AAOS apps interacting with vehicle properties -->
<!-- In a real app, specific VHAL permissions (e.g., ACCESS_CAR_SPEED) would be needed -->
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

<!-- REQUIRED FEATURES for Android Automotive OS (AAOS) -->
<!-- Declares that the application is meant to run on an Automotive system -->
<uses-feature
    android:name="android.hardware.type.automotive"
    android:required="true" />

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.Polestar" />

</manifest>